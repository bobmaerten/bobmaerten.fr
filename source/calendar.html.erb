---
layout: layout
pageable: true
---
<h1>Archives pour
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%d/%m/%Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%m/%Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h1>

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Page précédente', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><span><%= article.date.strftime('%d/%m/%Y') %></span> - <%= link_to article.title, article %></li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Page suivante', next_page %></p>
  <% end %>
<% end %>
